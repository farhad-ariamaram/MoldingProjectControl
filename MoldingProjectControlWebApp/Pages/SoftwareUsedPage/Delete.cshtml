@page
@model MoldingProjectControlWebApp.Pages.SoftwareUsedPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>آیا از حذف فایل مطمئن می‌باشید؟</h3>
<div>
    <h4>نرم افزار استفاده شده</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            نرم افزار استفاده شده
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblSoftwareUsed.FldSoftwareUsedTxt)
        </dd>
        <dt class="col-sm-2">
            تولیدکننده نرم افزار استفاده شده
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblSoftwareUsed.FldSoftwareUsedManufacturer)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="TblSoftwareUsed.FldSoftwareUsedId" />
        <input type="submit" value="حذف" class="btn btn-danger ml-1 mr-1" />
        <a asp-page="./Index">انصراف</a>
    </form>
</div>
