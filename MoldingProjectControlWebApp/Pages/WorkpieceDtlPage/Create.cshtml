@page
@model MoldingProjectControlWebApp.Pages.WorkpieceDtlPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>افزودن</h1>

<h4>جزئیات قطعه کار</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TblWorkpieceDtl.FldWorkpieceId" class="control-label">قطعه کار</label>
                <select asp-for="TblWorkpieceDtl.FldWorkpieceId" class ="form-control" asp-items="ViewBag.FldWorkpieceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TblWorkpieceDtl.FldWorkpieceCompositionComponentsId" class="control-label">اجزای تشکیل دهنده</label>
                <select asp-for="TblWorkpieceDtl.FldWorkpieceCompositionComponentsId" class ="form-control" asp-items="ViewBag.FldWorkpieceCompositionComponentsId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
