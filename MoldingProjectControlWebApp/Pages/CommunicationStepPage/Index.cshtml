@page
@model MoldingProjectControlWebApp.Pages.CommunicationStepPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>مرحله ارتباط</h1>

<p>
    <a class="btn btn-success m-1" asp-page="Create"><i class="fa fa-plus"></i></a>
</p>
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>
                مرحله پیاده سازی
            </th>
            <th>
                مرحله پیاده سازی مرتبط
            </th>
            <th>
                نوع مرحله ارتباط
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TblCommunicationStep)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FldImplementationSteps.FldImplementationStepsTxt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FldImplementationStepsRelated.FldImplementationStepsTxt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FldTypeOfCommunicationStep.FldTypeOfCommunicationStepTxt)
                </td>
                <td>
                    <a class="btn btn-warning text-white btn-block" asp-page="./Edit" asp-route-id="@item.FldCommunicationStepId"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-block" asp-page="./Delete" asp-route-id="@item.FldCommunicationStepId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-link" asp-page="../Index">بازگشت</a>
