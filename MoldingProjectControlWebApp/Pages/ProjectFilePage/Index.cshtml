@page
@model MoldingProjectControlWebApp.Pages.ProjectFilePage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>فایل پروژه</h1>

<p>
    <a class="btn btn-success m-1" asp-page="Create"><i class="fa fa-plus"></i></a>
</p>
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>
                فایل
            </th>
            <th>
                فایل قبلی
            </th>
            <th>
               پروژه
            </th>
            <th>
               نوع فایل پروژه
            </th>
            <th>
               قطعه کار
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblProjectFile) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FldProjectFilesFileId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldProjectFilesOldFileId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldProject.FldProjectTxt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldProjectFileType.FldProjectFileTypeTxt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldWorkpiece.FldWorkpieceTxt)
            </td>
            <td>
                <a class="btn btn-warning text-white btn-block" asp-page="./Edit" asp-route-id="@item.FldProjectFilesId"><i class="fa fa-edit"></i></a>
                <a class="btn btn-danger btn-block" asp-page="./Delete" asp-route-id="@item.FldProjectFilesId"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-link" asp-page="../Index">بازگشت</a>
