@page
@model MoldingProjectControlWebApp.Pages.MoldPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>قالب</h1>

<h4>ویرایش</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblMold.FldMoldId" />
            <div class="form-group">
                <label asp-for="TblMold.FldMoldTxt" class="control-label">قالب</label>
                <input asp-for="TblMold.FldMoldTxt" class="form-control" />
                <span asp-validation-for="TblMold.FldMoldTxt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblMold.FldModelId" class="control-label">مدل</label>
                <input asp-for="TblMold.FldModelId" class="form-control" />
                <span asp-validation-for="TblMold.FldModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">قطعه کار</label>
                @Html.ListBoxFor(x => x.moldWorkpieceVM.SelectedIds, Model.moldWorkpieceVM.Items,
               new { @class = "form-control", multiple = "multiple", id = "moldWorkpiece-dropdown" })
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#moldWorkpiece-dropdown").multiselect({
                enableFiltering: true,
                buttonWidth: '100%',
                buttonClass: 'btn btn-outline-secondary',
                nonSelectedText: 'موردی انتخاب نشده',
                filterPlaceholder: 'جستجو',
                allSelectedText: "همه موارد انتخاب شده",
                nSelectedText: "مورد انتخاب شده",
            });
        });
    </script>
}
