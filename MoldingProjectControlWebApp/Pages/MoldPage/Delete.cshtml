@page
@model MoldingProjectControlWebApp.Pages.MoldPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>آیا از حذف فایل مطمئن می‌باشید؟</h3>
<div>
    <h4>قالب</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            قالب
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblMold.FldMoldTxt)
        </dd>
        <dt class="col-sm-2">
            مدل
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblMold.FldModelId)
        </dd>
