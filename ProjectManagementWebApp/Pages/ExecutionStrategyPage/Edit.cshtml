@page
@model ProjectManagementWebApp.Pages.ExecutionStrategyPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>استراتژی اجرا</h1>

<h4>ویرایش</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblExecutionStrategy.FldExecutionStrategyId" />
            <div class="form-group">
                <label asp-for="TblExecutionStrategy.FldExecutionStrategyTxt" class="control-label">استراتژی اجرا</label>
                <input asp-for="TblExecutionStrategy.FldExecutionStrategyTxt" class="form-control" />
                <span asp-validation-for="TblExecutionStrategy.FldExecutionStrategyTxt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblExecutionStrategy.FldWorkTypeId" class="control-label">نوع کار</label>
                <select asp-for="TblExecutionStrategy.FldWorkTypeId" class="form-control" asp-items="ViewBag.FldWorkTypeId"></select>
                <span asp-validation-for="TblExecutionStrategy.FldWorkTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
