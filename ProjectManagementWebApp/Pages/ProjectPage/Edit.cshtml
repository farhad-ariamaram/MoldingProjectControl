@page
@model ProjectManagementWebApp.Pages.ProjectPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>پروژه</h1>

<h4>ویرایش</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblProject.FldProjectId" />
            <div class="form-group">
                <label asp-for="TblProject.FldProjectTxt" class="control-label">پروژه</label>
                <input asp-for="TblProject.FldProjectTxt" class="form-control" />
                <span asp-validation-for="TblProject.FldProjectTxt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblProject.FldProjectTypeId" class="control-label">نوع پروژه</label>
                <select asp-for="TblProject.FldProjectTypeId" class="form-control" asp-items="ViewBag.FldProjectTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TblProject.FldProjectDeadlineForCompletion" class="control-label">ددلاین اتمام پروژه</label>
                <input asp-for="TblProject.FldProjectDeadlineForCompletion" class="form-control" />
                <span asp-validation-for="TblProject.FldProjectDeadlineForCompletion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblProject.FldProjectRegistrarId" class="control-label">ثبت کننده پروژه</label>
                <input asp-for="TblProject.FldProjectRegistrarId" class="form-control" />
                <span asp-validation-for="TblProject.FldProjectRegistrarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblProject.FldProjectRegistrarDate" class="control-label">تاریخ ثبت پروژه</label>
                <input asp-for="TblProject.FldProjectRegistrarDate" class="form-control" />
                <span asp-validation-for="TblProject.FldProjectRegistrarDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblProject.FldProjectExecutorId" class="control-label">مجری پروژه</label>
                <input asp-for="TblProject.FldProjectExecutorId" class="form-control" />
                <span asp-validation-for="TblProject.FldProjectExecutorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblProject.FldProjectExecutorDate" class="control-label">تاریخ اجرای پروژه</label>
                <input asp-for="TblProject.FldProjectExecutorDate" class="form-control" />
                <span asp-validation-for="TblProject.FldProjectExecutorDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblProject.FldProjectVerifierId" class="control-label">تایید کننده پروژه</label>
                <input asp-for="TblProject.FldProjectVerifierId" class="form-control" />
                <span asp-validation-for="TblProject.FldProjectVerifierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblProject.FldProjectVerifierDate" class="control-label">تاریخ تایید پروژه</label>
                <input asp-for="TblProject.FldProjectVerifierDate" class="form-control" />
                <span asp-validation-for="TblProject.FldProjectVerifierDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">قالب ها</label>
                @Html.ListBoxFor(x => x.projectMoldVM.SelectedIds, Model.projectMoldVM.Items,
               new { @class = "form-control", multiple = "multiple", id = "projectMold-dropdown" })
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#projectMold-dropdown").multiselect({
                enableFiltering: true,
                buttonWidth: '100%',
                buttonClass: 'btn btn-outline-secondary',
                nonSelectedText: 'موردی انتخاب نشده',
                filterPlaceholder: 'جستجو',
                allSelectedText: "همه موارد انتخاب شده",
                nSelectedText: "مورد انتخاب شده",
            });
        });
    </script>
}
