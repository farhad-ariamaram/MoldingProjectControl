@page
@model ProjectManagementWebApp.Pages.ProjectFilePage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>آیا از حذف فایل مطمئن می‌باشید؟</h3>
<div>
    <h4>فایل پروژه</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            پروژه
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblProjectFile.FldProject.FldProjectTxt)
        </dd>
        <dt class="col-sm-2">
            نوع فایل پروژه
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblProjectFile.FldProjectFileType.FldProjectFileTypeTxt)
        </dd>
        <dt class="col-sm-2">
            قطعه کار
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblProjectFile.FldWorkpiece.FldWorkpieceTxt)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="TblProjectFile.FldProjectFilesId" />
        <input type="submit" value="حذف" class="btn btn-danger ml-1 mr-1" />
        <a asp-page="./Index">انصراف</a>
    </form>
</div>
