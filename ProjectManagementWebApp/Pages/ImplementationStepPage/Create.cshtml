@page
@model ProjectManagementWebApp.Pages.ImplementationStepPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>افزودن</h1>

<h4>مرحله پیاده سازی</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TblImplementationStep.FldProjectId" class="control-label">پروژه</label>
                <select asp-for="TblImplementationStep.FldProjectId" class ="form-control" asp-items="ViewBag.FldProjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TblImplementationStep.FldExecutionStrategyId" class="control-label">استراتژی اجرا</label>
                <select asp-for="TblImplementationStep.FldExecutionStrategyId" class ="form-control" asp-items="ViewBag.FldExecutionStrategyId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
