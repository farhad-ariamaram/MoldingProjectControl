@page
@model ProjectManagementWebApp.Pages.ImplementationStepPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>آیا از حذف فایل مطمئن می‌باشید؟</h3>
<div>
    <h4>مرحله پیاده سازی</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            مرحله پیاده سازی
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblImplementationStep.FldImplementationStepsTxt)
        </dd>
        <dt class="col-sm-2">
            استراتژی اجرا
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblImplementationStep.FldExecutionStrategy.FldExecutionStrategyTxt)
        </dd>
        <dt class="col-sm-2">
            پروژه
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblImplementationStep.FldProject.FldProjectTxt)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="TblImplementationStep.FldImplementationStepsId" />
        <input type="submit" value="حذف" class="btn btn-danger ml-1 mr-1" />
        <a asp-page="./Index">انصراف</a>
    </form>
</div>
