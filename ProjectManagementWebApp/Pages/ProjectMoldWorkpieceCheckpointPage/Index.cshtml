@page
@model ProjectManagementWebApp.Pages.ProjectMoldWorkpieceCheckpointPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>نقطه بررسی پروژه قطعه کار قالب</h1>

<p>
    <a class="btn btn-success m-1" asp-page="Create"><i class="fa fa-plus"></i></a>
</p>
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>
                نقطه بیس X
            </th>
            <th>
                نقطه بیس Y
            </th>
            <th>
                نقطه بیس Z
            </th>
            <th>
               قطعه کار پروژه قالب
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblProjectMoldWorkpieceCheckpoint) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FldProjectMoldWorkpieceCheckpointBasePointX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldProjectMoldWorkpieceCheckpointBasePointY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldProjectMoldWorkpieceCheckpointBasePointZ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldProjectMoldWorkpiece.FldProjectMoldWorkpieceId)
            </td>
            <td>
                <a class="btn btn-warning text-white btn-block" asp-page="./Edit" asp-route-id="@item.FldProjectMoldWorkpieceCheckpointId"><i class="fa fa-edit"></i></a>
                <a class="btn btn-danger btn-block" asp-page="./Delete" asp-route-id="@item.FldProjectMoldWorkpieceCheckpointId"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-link" asp-page="../Index">بازگشت</a>
