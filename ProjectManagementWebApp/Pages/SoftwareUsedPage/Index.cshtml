@page
@model ProjectManagementWebApp.Pages.SoftwareUsedPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>نرم افزار استفاده شده</h1>

<p>
    <a class="btn btn-success m-1" asp-page="Create"><i class="fa fa-plus"></i></a>
</p>
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>
                نرم افزار استفاده شده
            </th>
            <th>
                تولیدکننده نرم افزار استفاده شده
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblSoftwareUsed) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FldSoftwareUsedTxt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldSoftwareUsedManufacturer)
            </td>
            <td>
                <a class="btn btn-warning text-white btn-block" asp-page="./Edit" asp-route-id="@item.FldSoftwareUsedId"><i class="fa fa-edit"></i></a>
                <a class="btn btn-danger btn-block" asp-page="./Delete" asp-route-id="@item.FldSoftwareUsedId"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-link" asp-page="../Index">بازگشت</a>
