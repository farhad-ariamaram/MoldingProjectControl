@page
@model ProjectManagementWebApp.Pages.CommunicationStepPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>افزودن</h1>

<h4>مرحله ارتباط</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TblCommunicationStep.FldTypeOfCommunicationStepId" class="control-label">نوع مرحله ارتباط</label>
                <select asp-for="TblCommunicationStep.FldTypeOfCommunicationStepId" class ="form-control" asp-items="ViewBag.FldTypeOfCommunicationStepId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TblCommunicationStep.FldImplementationStepsId" class="control-label">مرحله پیاده سازی</label>
                <select asp-for="TblCommunicationStep.FldImplementationStepsId" class ="form-control" asp-items="ViewBag.FldImplementationStepsId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TblCommunicationStep.FldImplementationStepsRelatedId" class="control-label">مرحله پیاده سازی مرتبط</label>
                <select asp-for="TblCommunicationStep.FldImplementationStepsRelatedId" class ="form-control" asp-items="ViewBag.FldImplementationStepsRelatedId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
